@model TheRentersPlace.Models.Tenant

@{
    ViewBag.Title = "Tenant Login";
}

<div class="row justify-content-lg-start">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Login as Tenant</h3>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("Login", "Tenants", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username)
                        @Html.TextBoxFor(m => m.Username, "", new { @class = "form-control", @placeholder = "Username" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })

                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                    </div>
                }
                <div>
                    <p>No account? Click <span>@Html.ActionLink("Here", "Create", "Tenants")</span> to create one</p>
                </div>
            </div>
        </div>
    </div>
</div>


